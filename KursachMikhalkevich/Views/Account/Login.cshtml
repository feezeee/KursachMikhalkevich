@model Login
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ru" style="width: 100%; height: 100%; padding: 0; margin: 0;">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewData["Title"] - Авторизация</title>
        
        <link rel="stylesheet" href="~/css/login.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/popper/dist/popper.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    </head>
    <body>
        <div class="myForm">
            <div class="myimg">
                <img src="~/img/user.png" />
            </div> 
                 <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" class="d-flex flex-column p-5">

                  <h2 class="fw-bold mb-5 text-uppercase text-center text-white">Вход</h2>

                  <div class="form-outline form-white mb-5 text-lg-left">
                <input required type="text" asp-for="Email" class="form-control form-control-lg" placeholder="Эл. почта:"/>
                @Html.ValidationMessageFor(model => model.Email, null, new { style = "color:red" })
            </div>

            <div class="form-outline form-white mb-5 text-lg-left">
                <input required type="password" asp-for="Password" class="form-control form-control-lg" placeholder="Пароль:" />
                @Html.ValidationMessageFor(model => model.Password, null, new { style = "color:red" })
            </div>



            <button class="btn btn-success px-5" type="submit">Вход</button>
                </form>
                       
        </div>    
    </body>

    <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" type="text/javascript"></script>
</html>

