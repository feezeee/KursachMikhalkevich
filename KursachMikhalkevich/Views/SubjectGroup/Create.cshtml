@model SubjectGroup
@{
    Layout = "_Layout";
}


<div class="divForForm">
    <div class="myForm">
        <a type="button" asp-controller="Group" asp-action="Information" asp-route-id="@Model.GroupId" class="close">X</a>        

        <form method="post" asp-controller="SubjectGroup" asp-action="Create">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input hidden asp-for="GroupId" type="text" value="@Model.GroupId" />

                    <label for="subject">Предмет*</label>
                    <select id="subject" required class="form-control" asp-for="SubjectId" asp-items="ViewBag.Subjects"></select>
                    @Html.ValidationMessageFor(model => model.SubjectId, null, new { style = "color:red" })
                </div>
                <div class="form-group col-md-6">
                    <label for="datestart">Дата и время начала занятия*</label>
                    <input required asp-for="DateTimeStart" type="datetime-local" class="form-control" id="datestart" placeholder="Дата и время начала занятия" value="@Model?.DateTimeStart.ToString("s")">                    
                    @Html.ValidationMessageFor(model => model.DateTimeStart, null, new { style = "color:red" })
                </div>
                <div class="form-group col-md-6">
                    <label for="dateend">Дата и время конца занятия*</label>
                    <input asp-for="DateTimeEnd" required class="form-control" type="datetime-local" id="dateend" placeholder="Дата и время конца занятия" value="@Model?.DateTimeEnd.ToString("s")">                    
                    @Html.ValidationMessageFor(model => model.DateTimeStart, null, new { style = "color:red" })
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Добавить</button>
        </form>

    </div>
</div>