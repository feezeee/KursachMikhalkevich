@model Group
@{
    Layout = "_Layout";
}


<div class="divForForm">
    <div class="myForm">
        <form asp-action="List" asp-controller="Group">
            <button type="submit" class="close" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </form>

        <form method="post" asp-controller="Group" asp-action="Create">
   
                <div class="form-group">
                    <label for="Name">Название*</label>
                    <input asp-for="Name" required type="text" class="form-control" id="Name" placeholder="Название" value="@Model?.Name">
                    @Html.ValidationMessageFor(model => model.Name, null, new { style = "color:red" })
                </div>
   

            <button type="submit" class="btn btn-primary">Создать</button>
        </form>

    </div>
</div>